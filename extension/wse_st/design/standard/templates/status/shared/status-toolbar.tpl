{debug-accumulator id="status-shared-statustoolbar" name="Status toolbar"}
<div id="status-toolbar" class="ui-state-default ui-corner-top">
	<span id="StatusDeleteAction" class="ui-icon ui-corner-all ui-icon-trash" title="{'Delete'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusReplyAction" class="ui-icon ui-corner-all ui-icon-comment" title="{'Reply'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusViewDiscussionAction" class="ui-icon ui-corner-all ui-icon-script status-already hidden" title="{'View the full discussion'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusSpreadAction" class="ui-icon ui-corner-all ui-icon-transferthick-e-w" title="{'Spread'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusUnspreadAction" class="ui-icon ui-corner-all ui-icon-transferthick-e-w status-already hidden" title="{'Unspread'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusFavoriteAction" class="ui-icon ui-corner-all ui-icon-star" title="{'Favorite'|i18n('design/status/shared/status-toolbar')}"></span>
	<span id="StatusUnfavoriteAction" class="ui-icon ui-corner-all ui-icon-star status-already hidden" title="{'Remove from the favorite list'|i18n('design/status/shared/status-toolbar')}"></span>
</div>
{/debug-accumulator}